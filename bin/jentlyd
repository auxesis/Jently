#!/usr/bin/env ruby

require 'daemons'
require 'pathname'

root    = Pathname.new(__FILE__).parent.expand_path
options = {
  :dir_mode => :script,
  :ARGV     => ARGV
}
jently  = root.join('jently').to_s

if piddir = ENV['PIDDIR']
  options.merge!({
    :dir_mode => :normal,
    :dir      => piddir
  })
end

Daemons.run(jently, options)
